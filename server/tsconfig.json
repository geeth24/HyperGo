{
  "compilerOptions": {
    "target": "ES2020",                 // Specify ECMAScript target version
    "module": "CommonJS",              // Specify module code generation
    "rootDir": "src",                  // Specify the root directory of input files
    "outDir": "dist",                  // Redirect output structure to the dist folder
    "esModuleInterop": true,           // Enable interop between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true, // Ensure case-sensitive imports
    "strict": true,                    // Enable strict type-checking options
    "skipLibCheck": true,               // Skip type checking of declaration files
    "resolveJsonModule": true

  },
  "include": ["src"],                  // Include all files in the src folder
  "exclude": ["node_modules"]          // Exclude node_modules folder
}
